<div class="container">
    <div class="heading">SQLized Burgers
    </div>
    <div class="inputBurger">
        <form class="burgForm" action="/" method="POST">
            Enter a type of Burger:
            <br>
            <input type="text" name="name" class="burgText">
            <input type="submit" value="Submit" class="submit">
        </form>
        <form class="customerForm" action="/customer" method="POST">
            Enter a Customer who wants to eat:
            <br>
            <input type="text" name="customerName" class="custText">
            <input type="submit" value="Submit" class="submit">
        </form>
    </div>
    <div class="burgerContainer burgerWell">
        <h2>Burgers yet to be Devoured</h2>
        <ul>
            {{#each bacon}}
             {{#unless this.devoured}}
            <div class="burgerCell">
                <li>
                    <div class="burgerName">
                        {{name}}
                    </div>
                </li>
                <!-- {{> options}} -->                                 
                <div class="eat">
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button type="submit" class="eatBtn">Devour!</button>
                    </form>
                </div>
            </div>
            {{/unless}}
             {{/each}}
        </ul>
    </div>
    <div class="eatenContainer burgerWell">
        <h2>Burgers Devoured</h2>
        <ul>
            {{#each bacon}} {{#if this.devoured}}
            <div class="burgerCell">
                <li>
                    {{this.name}}
                </li>
            
                <div class="del">
                    <form action="/{{this.id}}?_method=DELETE" method="POST">
                        <button type="submit" class="eatBtn">Delete</button>
                    </form>
                </div>
            </div>
            {{/if}} {{/each}}
        </ul>
    </div>

</div>